<!-- Layout of a header item in PreferenceActivity. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:gravity="center_vertical"
    android:paddingRight="?android:attr/scrollbarSize"
    android:padding="2dp"
    >
  


        <TextView
            android:id="@+id/add_blood_listview_item_tv1"
            style="@style/textsmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:text="序号"
            android:gravity="center"
            android:textColor="@color/cornflowerblue" 
            android:layout_weight="1"/>
       <View
        android:id="@+id/listview_divider"
        android:layout_width="2dip"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/main_list_divder" />
       


       <TextView
            android:id="@+id/add_blood_listview_item_tv2"
            style="@style/textsmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:text="用血方式"
            android:gravity="center" 
            android:textColor="@color/cornflowerblue" 
            android:layout_weight="2"/>
       <View
        android:id="@+id/listview_divider"
        android:layout_width="2dip"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/main_list_divder" />
       
       
        <TextView
            android:id="@+id/add_blood_listview_item_tv3"
            style="@style/textsmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:text="申请输血时间"
            android:gravity="center"
            android:textColor="@color/cornflowerblue" 
            android:layout_weight="2.5"/>
       <View
        android:id="@+id/listview_divider"
        android:layout_width="2dip"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/main_list_divder" />
       
       <TextView
            android:id="@+id/add_blood_listview_item_tv4"
            style="@style/textsmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:text="血量"
            android:gravity="center"
            android:textColor="@color/cornflowerblue" 
            android:layout_weight="1.5"/>
       <View
        android:id="@+id/listview_divider"
        android:layout_width="2dip"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/main_list_divder" />
