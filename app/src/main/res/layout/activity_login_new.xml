<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#2daa9b"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="16dp"
        android:src="@drawable/app_company_logo3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <EditText
                android:background="@drawable/edit"
                android:layout_width="match_parent"
                android:hint="账号"
                android:textSize="14sp"
                android:id="@+id/login_username"
                android:textColorHint="@color/gray"
                android:layout_height="40dp"
                android:singleLine="true" />

            <EditText
                android:background="@drawable/edit"
                android:layout_width="match_parent"
                android:hint="密码"
                android:textSize="14sp"
                android:id="@+id/login_password"
                android:inputType="textPassword"
                android:textColorHint="@color/gray"
                android:layout_marginTop="14dp"
                android:layout_height="40dp"
                android:singleLine="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content">

                <CheckBox android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:button="@drawable/btn_check_box"
                    android:text="记住密码"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:id="@+id/login_checkBox1"
                    android:layout_alignParentLeft="true"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="14dp"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:background="@drawable/btn_common_but"
                    android:layout_height="wrap_content"
                    android:text="登陆"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:id="@+id/login_ok"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:background="@drawable/btn_common_but"
                    android:layout_height="wrap_content"
                    android:text="IP设置"
                    android:id="@+id/server_ip"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="8dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:background="@drawable/btn_common_but"
                    android:layout_height="wrap_content"
                    android:id="@+id/auto_update"
                    android:textSize="16sp"
                    android:text="版本更新"
                    android:textColor="@android:color/white"
                    />
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>