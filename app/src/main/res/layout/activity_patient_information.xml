<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/common_title_fragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/preference_screen_side_margin"
            android:layout_marginRight="@dimen/preference_screen_side_margin_negative"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" 
                android:layout_marginLeft="20dp"
                android:text="病人基本信息："
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />

           
           <TextView
                android:id="@+id/patient_infor_tev_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" 
                android:layout_marginLeft="20dp"
                android:text="信息1："
                android:textSize="20dp"
                android:textColor="@color/cornflowerblue" 
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />
           <TextView
                android:id="@+id/patient_infor_tev_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" 
                android:layout_marginLeft="20dp"
                android:text="信息2："
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />
           
           <TextView
                android:id="@+id/patient_infor_tev_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" 
                android:layout_marginLeft="20dp"
                android:text="信息3："
                android:textColor="@color/cornflowerblue" 
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />
           
           <TextView
                android:id="@+id/patient_infor_tev_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" 
                android:layout_marginLeft="20dp"
                android:text="信息4："
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />
           
           <TextView
                android:id="@+id/patient_infor_tev_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" 
                android:layout_marginLeft="20dp"
                android:text="信息5："
                android:textSize="20dp"
                android:textColor="@color/cornflowerblue" 
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />
           
           <TextView
                android:id="@+id/patient_infor_tev_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" 
                android:layout_marginLeft="20dp"
                android:text="信息6："
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />
           
          
        </LinearLayout>
        <LinearLayout             
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" 
                android:layout_marginLeft="20dp"
                android:text="诊断史："
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />
           
            
            <include layout="@layout/activity_patient_information_list"   /> 
            <LinearLayout
              android:id="@+id/common_root_fragment"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/preference_screen_side_margin"
              android:layout_marginRight="@dimen/preference_screen_side_margin_negative"
              android:orientation="vertical">
            
               <ListView 
                 android:id="@+id/patient_infor_listview"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="?android:attr/detailsElementBackground"/> 
                
    
        </LinearLayout>
       
        </LinearLayout>
        
     
    </LinearLayout>

    <RelativeLayout android:id="@+id/button_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:visibility="visible">

        <Button android:id="@+id/common_but_cancle"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:layout_alignParentLeft="true"
            android:text="取消"
        />
    </RelativeLayout>
</LinearLayout>
